<?xml version="1.0" encoding="UTF-8"?>
<!-- A wrapper that allows for multiple component types to appear in the same List/Grid -->
<component name="CardWrapper" extends="Group">
    <interface>
        <field id="itemContent" type="node" onChange="onContentChanged" />
        <field id="focusPercent" type="float" onChange="delegatedPropertyChanged" />
        <field id="gridHasFocus" type="boolean" onChange="delegatedPropertyChanged" />
        <field id="rowListHasFocus" type="boolean" onChange="delegatedPropertyChanged" />
        <field id="rowHasFocus" type="boolean" onChange="delegatedPropertyChanged" />
        <field id="rowFocusPercent" type="float" onChange="delegatedPropertyChanged" />
        <field id="width" type="float" onChange="delegatedPropertyChanged" />
        <field id="height" type="float" onChange="delegatedPropertyChanged" />
        <field id="index" type="integer" onChange="delegatedPropertyChanged" />
    </interface>
</component>