import "pkg:/components/screens/property/rows/row_util.bs"
sub init()
end sub

sub onContentChanged()
    'TODO reuse?
    m.top.removeChild(m.itemNode)

    sectionItem = m.top.itemContent.aa
    itemNode = m.top.CreateChild(sectionItem.type)

    itemNode.width = m.top.width
    itemNode.height = m.top.height
    if itemNode.doesExist("content")
        itemNode.content = sectionItem
    end if
    m.itemNode = itemNode
end sub

sub onSizeChanged()
    item = m.itemNode
    if item <> invalid
        item.width = m.top.width
        item.height = m.top.height
    end if
end sub