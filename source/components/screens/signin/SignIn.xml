<?xml version="1.0" encoding="utf-8"?>
<component name="SignIn" extends="BaseView" initialFocus="btn_new_code">
    <children>
        <Timer id="code_expiration_timer" repeat="false" />
        <Timer id="status_poll_timer" repeat="true" />
        <Poster
            uri="pkg:/images/elv_logo.png"
            inheritParentTransform="false"
            width="100"
            height="100"
            translation="[96,54]"
        />
        <TvLabel
            text="Media Wallet"
            fontStyle="label_40"
            inheritParentTransform="false"
            translation="[236,80]"
        />
        <LayoutGroup
            translation="[960,156]"
            layoutDirection="vert"
            horizAlignment="center"
            vertAlignment="top"
        >
            <TvLabel text="Scan QR Code" fontStyle="title_62" />
            <Spacer height="21" />
            <TvLabel
                text="Scan the QR Code with your camera app or a QR code reader on your device to verify the code."
                fontStyle="hint_31"
                wrap="true"
                horizAlign="center"
                width="564"
                lineSpacing="-3"
            />
            <Spacer height="15" />
            <TvLabel id="qr_code" fontStyle="title_62" />
            <Spacer height="18" />
            <Group>
                <BusySpinner id="spinner" uri="pkg:/images/busyspinner_hd.png" />
                <Poster id="qr_image" width="330" height="330" />
            </Group>
            <Spacer height="45" />
            <TvButton id="btn_new_code" text="Request New Code" />
        </LayoutGroup>
    </children>
</component>