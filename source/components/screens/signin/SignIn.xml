<?xml version="1.0" encoding="utf-8"?>
<component name="SignIn" extends="BaseView" initialFocus="btn_new_code">
    <children>
        <Timer id="code_expiration_timer" repeat="false" />
        <Timer id="status_poll_timer" repeat="true" />

        <Rectangle color="#000000" width="1920" height="1080">
            <LayoutGroup
                translation="[960,540]"
                layoutDirection="vert"
                horizAlignment="center"
                vertAlignment="center"
            >
                <SimpleLabel text="Scan QR Code" />
                <SimpleLabel
                    text="Scan the QR Code with your camera app or a QR code reader on your device to verify the code." />
                <SimpleLabel id="qr_code" />
                <Poster id="qr_image" />
                <TvButton id="btn_new_code" text="request new code" />
            </LayoutGroup>
        </Rectangle>
    </children>
</component>