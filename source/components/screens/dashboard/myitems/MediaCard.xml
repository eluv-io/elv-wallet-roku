<?xml version="1.0" encoding="UTF-8"?>
<component name="MediaCard" extends="Group">
    <interface>
        <field id="itemContent" type="node" onChange="onItemContentChanged" />
        <field id="focusPercent" type="float" onChange="onFocusChanged" />
        <field id="gridHasFocus" type="boolean" onChange="onFocusChanged" />
        <field id="width" type="float" onChange="onWidthChanged" />
        <field id="height" type="float" onChange="onHeightChanged" />
    </interface>
    <children>
        <Rectangle id="bg" color="#0000ffff">
            <LayoutGroup
                id="content_container"
                layoutDirection="vert"
            >

                <Spacer height="36" />
                <TvLabel id="token_id" horizAlign="right" />
                <Spacer height="36" />

                <Poster
                    id="image"
                    loadDisplayMode="scaleToZoom"
                    uri="pkg:/images/channel-poster_fhd.jpg"
                    loadingBitmapUri="pkg:/images/channel-poster_fhd.jpg"
                />

                <Spacer height="36" />
                <TvLabel id="title" numLines="1" horizAlign="center" />
                <Spacer height="36" />

                <TvLabel id="subtitle" numLines="1" horizAlign="center" />
            </LayoutGroup>
        </Rectangle>
    </children>
</component>