<?xml version="1.0" encoding="UTF-8"?>
<component name="SideNav" extends="Group">
    <interface>
        <field id="drawerOpen" type="boolean" value="false" onChange="onDrawerStateChanged" />
        <field id="collapsedSize" type="integer" onChange="onCollapsedSizeChanged" />
        <field id="selectedTab" type="string" alwaysNotify="true" />
    </interface>
    <children>
        <!-- Fullscreen shade to draw behind side nav when drawer is open -->
        <Rectangle id="shade" width="1920" height="1080" color="#000000AA" opacity="0" />
        <!-- Background for the side nav content -->
        <Rectangle id="scrim" height="1080" color="#00000088" />
        <FocusableLayoutGroup id="buttonContainer" layoutDirection="vert" />
    </children>
</component>