<?xml version="1.0" encoding="utf-8"?>
<component name="TabItem" extends="Group">

    <interface>
        <field id="itemContent" type="node" onChange="onItemContentChanged" />
        <field id="focusPercent" type="float" onChange="onFocusChanged" />
        <field id="gridHasFocus" type="boolean" onChange="onFocusChanged" />
        <!-- Manually set the label, mainly to help with measuring the size a node would reach with a given label -->
        <field id="label" type="string" onChange="onLabelChanged" />
    </interface>

    <children>
        <TvLabel
            id="label"
            fontStyle="header_30"
            horizAlign="center"
            vertAlign="center"
            translation="[20,4]"
        />
    </children>
</component>