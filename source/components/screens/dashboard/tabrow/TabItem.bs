sub init()
    m.label = m.top.findNode("label")
end sub

sub onItemContentChanged()
    m.label.text = m.top.itemContent.title
end sub

sub onItemFocusChanged()

end sub

sub onFocusPercentChanged()
    if m.top.focusPercent > 0.8
        m.label.color = "0x000000FF"
    else
        m.label.color = "0xFFFFFFFF"
    end if
end sub
