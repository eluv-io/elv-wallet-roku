<?xml version="1.0" encoding="UTF-8"?>
<component name="TabRow" extends="BaseView" initialFocus="grid">
    <interface>
        <field id="focusedTabName" type="string" onChange="onFocusedTabNameChanged" />
    </interface>
    <children>
        <LayoutGroup
            id="root"
            translation="[960,0]"
            layoutDirection="vert"
            horizAlignment="center"
            vertAlignment="top"
        >
            <Spacer height="40" />
            <Group>
                <Poster
                    id="tabs_bg"
                    uri="pkg:/images/tabs_bg.9.png"
                    height="80"
                    loadDisplayMode="scaleToFit"
                    inheritParentTransform="false"
                    loadSync="true" />

                <MarkupGrid
                    id="grid"
                    translation="[ 0, 42 ]"
                    itemComponentName="TabItem"
                    numColumns="3"
                    numRows="1"
                    itemSize="[0,46]"
                    focusBitmapUri="pkg:/images/tab_pill_indicator.9.png"
                    focusFootprintBitmapUri="pkg:/images/tab_pill_indicator.9.png"
                    focusBitmapBlendColor="#BFBFBFFF"
                    focusFootprintBlendColor="#888888FF"
                    drawFocusFeedbackOnTop="false"
                    drawFocusFeedback="true" />
            </Group>
            <Spacer height="40" />
        </LayoutGroup>
    </children>
</component>