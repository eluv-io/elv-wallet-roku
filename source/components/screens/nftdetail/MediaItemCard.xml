<?xml version="1.0" encoding="UTF-8"?>
<component name="MediaItemCard" extends="Group">
    <interface>
        <field id="itemContent" type="node" onChange="onItemContentChanged" />
        <field id="width" type="float" onChange="onSizeChanged" />
        <field id="height" type="float" onChange="onSizeChanged" />
        <field id="itemHasFocus" type="boolean" onChange="onItemFocusChanged" />
    </interface>
    <children>
        <Poster id="image" />
        <TvLabel id="title" visible="false" />
        <Poster id="video_icon" visible="false" uri="pkg:/images/video_icon.png" />
    </children>
</component>