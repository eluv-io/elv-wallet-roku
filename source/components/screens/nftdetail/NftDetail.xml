<?xml version="1.0" encoding="UTF-8"?>
<component name="NftDetail" extends="Group">
    <interface>
        <field id="nft" type="node" onChange="onNftItemChanged" />
    </interface>
    <children>
        <Poster id="bgImage" width="1920" height="1080" />
        <LayoutGroup layoutDirection="vert" translation="[80, 80]">
            <TvLabel
                id="title"
                numLines="2"
                width="1000"
                wrap="true"
                maxLines="2"
            />
            <TvLabel
                id="subtitle"
                maxLines="5"
                wrap="true"
                width="1300"
                fontStyle="body_32"
            />
            <RowList id="rowlist"
                rowTitleComponentName="NftDetailRowTitle"
                itemComponentName="MediaItemCard"
                height="1000"
                width="1920"
                rowFocusAnimationStyle="fixedFocusWrap"
                showRowLabel="[true]"
                rowLabelOffset="[[0,20]]"
                rowItemSize="[ [0, 270] ]"
                itemSize="[1920,300]"
                itemSpacing="[ 0, 60 ]"
                variableWidthItems="[true]"
                rowItemSpacing="[ [40, 0] ]"
            />
        </LayoutGroup>
    </children>
</component>