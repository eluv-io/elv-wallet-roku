<?xml version="1.0" encoding="UTF-8"?>
<component name="NftDetail" extends="BaseView">
    <interface>
        <field id="nft" type="node" onChange="onNftItemChanged" />
    </interface>
    <children>
        <Poster id="bgImage" width="1920" height="1080" />
        <LayoutGroup layoutDirection="vert" translation="[80, 80]">
            <TvLabel
                id="title"
                numLines="2"
                width="1000"
                wrap="true"
                maxLines="2"
            />
            <TvLabel
                id="subtitle"
                maxLines="5"
                wrap="true"
                width="1300"
                fontStyle="body_32"
            >
                <Animation id="subtitleAnimation"
                    duration="0.05"
                    repeat="false"
                    easeFunction="linear">
                    <Vector2DFieldInterpolator id="subtitleInterpolator"
                        key="[0.0, 0.25, 0.5, 0.75, 1.0]"
                        keyValue="[ [1.0, 0.0], [1.0, 0.25], [1.0, 0.5], [1.0, 0.75], [1.0, 1.0]]"
                        fieldToInterp="subtitle.scale" />
                </Animation>
            </TvLabel>
            <RowList id="rowlist"
                rowTitleComponentName="NftDetailRowTitle"
                itemComponentName="MediaItemCard"
                rowFocusAnimationStyle="fixedFocusWrap"
                showRowLabel="[true]"
                rowLabelOffset="[[0,20]]"
                rowItemSize="[ [0, 270] ]"
                itemSize="[1920,300]"
                itemSpacing="[ 0, 60 ]"
                variableWidthItems="[true]"
                rowItemSpacing="[ [40, 0] ]"
            />
        </LayoutGroup>
    </children>
</component>